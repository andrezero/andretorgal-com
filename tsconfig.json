{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "types": ["@astrojs/image/client"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@integration/*": ["src/integration/*"],
            "@icons/*": ["src/icons/*"],
            "@queries/*": ["src/queries/*"],
            "@styles/*": ["src/styles/*"],
            "@templates/*": ["src/templates/*"],
            "@utils/*": ["src/utils/*"]
        }
    }
}
