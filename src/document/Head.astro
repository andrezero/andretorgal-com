---
import '../styles/reset.css';
import '../styles/typography.css';
import '../styles/spacing.css';
import '../styles/color.css';
import '../styles/global.css';
import '../styles/accessibility.css';

import type { BaseNode } from '../types';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';

export type Props = { node: BaseNode };

const { node } = Astro.props;
const { title = SITE_TITLE, description = SITE_DESCRIPTION } = node;
// const { title, description, image = "/placeholder-social.jpg" } = Astro.props;
---

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,300;0,600;0,900;1,300;1,600&family=Source+Serif+Pro:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap"
        rel="stylesheet"
    />

