---
import PrintWatermark from '../page/PrintWatermark.astro';
---

<footer role="contentinfo" class="layout-footer cs-tertiary">
    <div class="container">
        <PrintWatermark />
        <hr />
        <div class="navigation">
            <nav class="nav" role="navigation" aria-label="Main sections of the site">
                <ul>
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li>
