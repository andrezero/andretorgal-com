---
import Markup from '../page/Markup.astro';

export interface Props {
    show?: boolean;
}

const { show } = Astro.props;
---

{
    show && (
        <Markup>
            <slot />
        </Markup>
    )
}

<style>
    div {
        display: flex;
        flex-direction: column;
        gap: var(--layout-unit);
    }
</style>
