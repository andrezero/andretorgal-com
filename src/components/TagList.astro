---
import type { TagNode } from '../types';

export interface Props {
    tags: TagNode[];
}

const { tags } = Astro.props;
---

<ul>
    {
        tags.map(tag => (
            <li>
                <h3>
                    <a href={`/tags/${tag.title}`}>
                        #{tag.title} ({tag.count})
                    </a>
                </h3>
            </li>
        ))
    }
</ul>
