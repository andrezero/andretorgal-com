---
import Figure from '@components/mdx/Figure.astro';
import type { BaseNode } from '@queries/types';

export type Props = {
    node: BaseNode;
};

const thumbImage = false;
// WIP;
---

{
    thumbImage && (
        <div class="thumb">
            <Figure src={thumbImage} />
        </div>
    )
}

<style is:global>
    .thumb,
    .thumb .figure,
    .thumb .block {
        width: 100%;
        height: 100%;
        min-height: 8em;
    }

    .thumb .figure picture {
        position: relative;
    }

    .thumb .figure picture img {
        position: absolute;
        top: 0;
        bottom: 0;
        object-fit: cover;
        object-position: 30%;
    }
</style>
