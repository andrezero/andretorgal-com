---
import PrintWatermark from '@components/page/PrintWatermark.astro';

import SiteHeaderHeading from './SiteHeaderHeading.astro';
import SiteHeaderNav from './SiteHeaderNav.astro';

export type Props = {
    hideWatermark?: boolean;
};

const { hideWatermark } = Astro.props;
---

<header class="cs-primary">
    <div class="container">
        <SiteHeaderHeading />
        {!hideWatermark && <PrintWatermark />}
        <SiteHeaderNav />
    </div>
</header>

<style>
    header {
        user-select: none;
        padding-top: var(--gap-h-s);
        padding-bottom: var(--gap-h-s);
        color: var(--scheme-fg);
        background-color: var(--scheme-bg);
    }

    .container {
        container: container / inline-size;
        display: flex;
        flex-direction: column;
        gap: var(--gap-h-s);
    }

    @media screen and (min-width: 650px) {
        .container {
            margin-inline: auto;
            max-width: var(--layout-container-width);
        }
    }

    @media screen and (min-width: 1060px) {
        header {
            height: 100%;
            padding-top: var(--gap-v-headroom);
            padding-bottom: var(--gap-h-s);
        }

        .container {
            margin: 0 var(--gap-h-s);
        }
    }

    @media screen and (min-width: 1060px) {
        .container {
            gap: var(--gap-v-s);
        }
    }

    @media screen and (min-width: 1420px) {
        .container {
            gap: var(--gap-v-m);
        }
    }
</style>
