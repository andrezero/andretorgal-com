---
import { NodeDate } from '@components/node';
import type { BaseNode } from '@content/index';

import PageTitle from './PageTitle.astro';

export type Props = {
    node: BaseNode;
    override?: boolean;
    noDate?: boolean;
};

const { node, override, noDate } = Astro.props;
const { title } = node;
---

<header>
    {!override && <PageTitle>{title}</PageTitle>}
    <slot />
    {!noDate && <NodeDate node={node} />}
</header>

<style>
    header {
        display: flex;
        flex-direction: column;
        gap: var(--layout-unit);
    }
</style>
