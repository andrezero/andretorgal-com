---
export interface Props {
    src: string | undefined;
}

const { src } = Astro.props;
---

{
    src && (
        <picture class="hero">
            <img src={src} alt="" />
        </picture>
    )
}

<style>
    .hero img {
        width: auto;
        max-width: initial;
        width: 100vw;
        margin-left: calc(-1 * var(--layout-gutter));
        object-fit: cover;
        object-position: -5vw;
    }

    @media screen and (min-width: 600px) {
        .hero img {
            margin-left: calc(-1 * (50vw - var(--layout-container-width) / 2));
        }
    }

    @media screen and (min-width: 1060px) {
        .hero img {
            width: calc(100vw - var(--layout-gutter) - var(--layout-gutter));
            max-width: 2000px;
            margin-left: calc(-1 * var(--layout-gutter));
            max-height: 50vh;
        }
    }
</style>
