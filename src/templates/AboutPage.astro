---
import { Body, Document, Head, Layout } from '@components/document';
import { NodeAbstract, NodeMeta } from '@components/node';
import { Article, ArticleHeader, Divider, Markup, Section, TopLine } from '@components/page';
import { SiteFooter, SiteHeader, SiteHeaderAbout, SiteLogo, SiteMain } from '@components/site';
import type { AboutNode } from '~/nodes/types';

export type Props = {
    content: AboutNode;
    img?: string;
};

const { content: node } = Astro.props;
const { thumbnail } = node;
---

<Document>
    <Head node={node} />
    <Body>
        <Layout>
            <SiteHeader slot="header" />
            <SiteHeaderAbout slot="section" />
            <SiteMain slot="main">
                <Article>
                    <ArticleHeader node={node} noDate slot="header" />
                    <Section>
                        <TopLine />
                        <header>
                            {
                                thumbnail && (
                                    <div class="image">
                                        <SiteLogo variant={thumbnail} />
                                    </div>
                                )
                            }
                            <NodeAbstract node={node} />
                        </header>
                        <Section>
                            <Divider />
                            <Markup><slot /></Markup>
                        </Section>
                        <Section>
                            <Divider />
                            <NodeMeta node={node} />
                        </Section>
                    </Section>
                </Article>
            </SiteMain>
            <SiteFooter slot="footer" />
        </Layout>
    </Body>
</Document>

<style>
    header {
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: start;
        gap: var(--layout-gap);
        overflow: hidden;
    }

    .image {
        min-width: 100%;
        object-fit: cover;
        border-radius: 100%;
        overflow: hidden;
    }

    @media screen and (min-width: 620px) {
        header {
            flex-direction: row;
        }

        .image {
            min-width: 12em;
            max-width: 12em;
            height: 12em;
            border-radius: 100%;
        }
    }
</style>
