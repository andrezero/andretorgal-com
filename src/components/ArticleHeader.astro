---
import type { BaseNode } from '../types';
import NodeDate from './NodeDate.astro';
import PageTitle from './PageTitle.astro';

export interface Props {
    node: BaseNode;
    override?: boolean;
}

const { node, override } = Astro.props;
const { title } = node;
---

<header>
    {!override && <PageTitle>{title}</PageTitle>}
    <slot />
    <NodeDate node={node} />
</header>

<style>
    header {
        display: flex;
        flex-direction: column;
        gap: var(--layout-unit);
    }
</style>
