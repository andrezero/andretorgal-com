---
import Markup from '../../page/Markup.astro';

export type Props = {
    show?: boolean;
};

const { show } = Astro.props;
---

{
    show && (
        <Markup>
            <slot />
        </Markup>
    )
}

<style>
    div {
        display: flex;
        flex-direction: column;
        gap: var(--layout-unit);
    }
</style>
